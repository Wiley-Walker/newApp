    <script>
       $(document).foundation();
     </script>
     <script src="http://cdn.jsdelivr.net/jquery.validation/1.13.1/jquery.validate.min.js"></script>

     <script>
$("#commentForm").validate({
  rules: {
    username: {
      required: true,
    minlength: 7
    },
    dueDate: {
      required: true,
    dateISO: true
    },
   description: {
      required: true,
    maxlength: 120
    },
  priority: {
      required: true,
    max: 10,
    min: 0
    },

  }
});
</script>

  </body>
</html>
