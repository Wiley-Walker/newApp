    <div class="confessions">
    <% for (var i = 0; i < confessions.length; i++) { %>
      <% var newSecret = confessions[i]; %>
        <div class="row confession" id="confession_<%= newSecret._id %>">
          <div class="large-8 columns">
            <h3>I have never seen <%= newSecret.confession %></h3>
          </div>
          <div class="large-4 columns">
          <p>Insert API data here</p>
          </div>
        </div>
    <% } %>
    </div>

    
    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
