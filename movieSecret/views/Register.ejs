<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/foundation.css">
    <script src="/javascripts/vendor/modernizr.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>


  <nav class="top-bar" data-topbar role="navigation" style="background-color: rgba(0, 0, 0, .4)">
   

  <section class="top-bar-section">
    <!-- Right Nav Section -->
    <ul class="right" style="background-color: rgba(0, 0, 0, .1)">
       
      <li class="name" style="background-color: rgba(0, 0, 0, .1)">
        <a href="/user/register" style="background-color: rgba(0, 0, 0, .1)">Register</a>
       
           
      </li>
      <li class="name" style="background-color: rgba(0, 0, 0, .1)">
      <a href="/user/login" style="background-color: rgba(0, 0, 0, .1)">Log In</a>
       
           
      </li>
      <li class="name" style="background-color: rgba(0, 0, 0, .1)">
      <a href="/profile" style="background-color: rgba(0, 0, 0, .1)">Profile</a>
       
           
      </li>
    </ul>

    <!-- Left Nav Section -->
     
  </section>
</nav>

    <h1 class="header"><a href="/"> <%= title %></a></h1>
    <h3 class="font"><%= subtitle %></h3>
		<div class="row">
		<div class="large-6 columns">
			
		<img src="https://pbs.twimg.com/profile_images/422240966871769088/oXjMc_ij_400x400.jpeg" width="300" height="300">
		<h4 class="font" style="color : red">You haven't registered Yet?</h4>
		</div>
		<div id="registration" class="large-6 columns">
			<form method="POST" action="/user/register">
				<div class="row">
		    	<div class="large-9 columns">
		      	<label>Username
		        	<input type="text" name="username" required/>
		      	</label>
		    	</div>
		 		</div>
				<div class="row">
		    	<div class="large-9 columns">
		      	<label>Email
		        	<input type="email" name="email" />
		      	</label>
		    	</div>
		 		</div>
				<div class="row">
		    	<div class="large-9 columns">
		      	<label>Password
		        	<input type="password" name="password" required/>
		      	</label>
		    	</div>
		 		</div>
				<div class="row">
		    	<div class="large-9 columns">
		      	<label>Confirm Password
		        	<input type="password" name="confirmPassword" required/>
		      	</label>
		    	</div>
		 		</div>
		 		<div class="row">
		    	<div class="large-5 columns">
		 		<input type="submit" class="button font" value="Register" name="submit">
		 		</div>
		    	<div class="large-7 columns">
		    	<p>   ...or <a href="/user/login">Log In</a> here</p>
		    	</div>
		</form>
		</div>
		</div>


    <script src="http://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="/javascripts/foundation.min.js"></script>
    <script>
       $(document).foundation();
     </script>
  </body>
</html>
